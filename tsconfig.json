{
  "compilerOptions": {
    "baseUrl": ".",
    "outDir": "./build",
    "target": "ES6",
    "module": "ES2020",
    "jsx": "react",
    "noImplicitAny": true,
    "allowSyntheticDefaultImports": true,
    "moduleResolution": "node",
    "paths": {
      "~/src/*": ["src/*"],
      "~/comp/*": ["src/components/*"],
      "~/assets/*": ["src/assets/*"]
    }
  }
}
